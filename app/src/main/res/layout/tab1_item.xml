<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:padding="15dp"
    android:id="@+id/tab1_item_parent_layout"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="#5223"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
        android:layout_margin="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="#000"
            android:text="Medicine Name : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tab1_medicine_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text=".............."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="#000"
            android:text="Dose Amount : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tab1_dose_amount"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text=".........."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="#000"
            android:text="Number Of Times : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tab1_number_of_times"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="......."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>


</LinearLayout>